<h1> Add a recipe!</h1>

<%= form_for @recipe do |f| %>

<% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %> prohibited this article from being saved:
    </h2>
    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class = "field_with_errors" >
    <%=f.label :name, "Name" %>
    <%=f.text_field :name %>
  </div>
  <br>
  <div class = "field_with_errors" >
    <%=f.label :instructions, "Instructions" %>
    <%=f.text_area :instructions, :rows => 3 %>
  </div>
  <br>
  <div class = "field_with_errors">
    <%=f.label :cooktime, "Cook Time" %>
    <%=f.text_field :cooktime %>
  </div>
  <br>
  <div class = "field_with_errors">
    <%#= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  </div>

  <h1> Add Ingredients</h1>
    <%= f.fields_for :ingredients, @ingredient do |ingredient_fields| %>
    <br>
    <div class = >
       <%= ingredient_fields.label :name, "Ingredient" %>
       <%= ingredient_fields.text_field :name %>
    <% end %>
  </div>
  <br>
  <div class = "actions">
  <%=f.submit%>
</div>
<%end%>
